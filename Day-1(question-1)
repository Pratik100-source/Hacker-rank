
#include<stdio.h>
#include <stdlib.h>

// #define RANGE_MIN -100
// #define RANGE_MAX 100
// #define abdul 6
// #define kadir 10

int main(){
    // int n= (rand() % (kadir - abdul + 1)) + abdul;
    int n;
    printf("");
    scanf("%d",&n);
    int arr[n];
    int i;
    int j;
    
    double count=0;
    double pratik=0;
    double panthi=0;
    double total=n;
    
    printf("");
    for(j=0;j<n;j++){
           
     scanf("%d",&arr[j]);
    }
    
    for(i=0;i<n;i++){
        if(arr[i]>0){
            count++;
        }
        else if(arr[i]<0){
            pratik++;
        }
        else{
            panthi++;
        }
    }
    
    double a= count/total;
    double b = pratik/total;
    double c = panthi/total;
    
    printf("%lf \n",a);
    printf("%lf \n",b);
    printf("%lf \n",c);
    
    
}
